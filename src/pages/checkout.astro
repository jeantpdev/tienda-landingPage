---
import Carrito from '@/components/componentes-checkout/Carrito.astro';
import Input from '@/components/componentes-checkout/Input.astro';
import Layout from '../layouts/Layout.astro';

---

<Layout title="Checkout">
    <div class="max-w-2xl mx-auto py-10 px-5 space-y-5">
        <div class="p-5">
            <form action="" class="flex flex-col space-y-2">
                <label for="">Nombre</label>
                <Input />

                <label for="">Apellido</label>
                <Input />

                <label for="">Numero (whatsapp)</label>
                <Input />

                <label for="">Ciudad</label>
                <Input />

                <label for="">Direccion</label>
                <Input />
            </form>
        </div>
        <div>
            <Carrito titulo = "Collar" color = "Plateado" precio = "20000" cantidad = "2" />
            <Carrito titulo = "Collar" color = "Plateado" precio = "20000" cantidad = "2" />
            <Carrito titulo = "Collar" color = "Plateado" precio = "20000" cantidad = "2" />
            <Carrito titulo = "Collar" color = "Plateado" precio = "20000" cantidad = "2" />
        </div>
        <div class="text-center">
            <a href="#" class="w-full inline items-center justify-end px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gray-800 hover:bg-gray-600 md:py-2 md:text-lg md:px-10">
                Confirmar pedido
            </a>
        </div>

    </div>
</Layout>
